<!DOCTYPE html>
<html>
  <head>
    <title>InstaClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header>

        




        <div style="color: red;">
          <% if flash[:errors] %>
              <ul>
                <% flash[:errors].each do |error| %>
                  <li>
                    <%= error %>
                  </li>
                <% end %>
              </ul>
          <% end %>
        </div>


      </header>


    <%= yield %>


  </body>


</html>
